<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <listener>
        <listener-class>com.sun.xml.ws.transport.http.servlet.WSServletContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ItemSaveServlet</servlet-name>
        <servlet-class>servlets.ItemSaveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestReviewServlet</servlet-name>
        <servlet-class>servlets.RequestReviewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImportItemsFromGD</servlet-name>
        <servlet-class>servlets.ImportItemsFromGD</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HadoopTripleCache</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>TSCache.v3</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>HBaseDocWorld</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ItemSaveServlet</servlet-name>
        <url-pattern>/saveItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestReviewServlet</servlet-name>
        <url-pattern>/requestReview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImportItemsFromGD</servlet-name>
        <url-pattern>/importItemsFromGD</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HadoopTripleCache</servlet-name>
        <url-pattern>/HadoopTripleCache</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TSCache.v3</servlet-name>
        <url-pattern>/TSCache.v3</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HBaseDocWorld</servlet-name>
        <url-pattern>/HBaseDocWorld</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
